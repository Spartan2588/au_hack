# Backend Configuration
PORT=5000
NODE_ENV=development

# API Keys for Real-Time AQI Data
# Get these from the respective API providers

# OpenWeatherMap (Recommended)
# Sign up: https://openweathermap.org/api/air-pollution
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# IQAir (Alternative)
# Sign up: https://www.iqair.com/air-quality-api
IQAIR_API_KEY=your_iqair_api_key_here

# WAQI (Alternative)
# Sign up: https://waqi.info/
WAQI_API_KEY=your_waqi_api_key_here

# Database (for future use)
# DATABASE_URL=your_database_url_here

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:5000/api/v1
REACT_APP_WAQI_TOKEN=your_waqi_token_here
